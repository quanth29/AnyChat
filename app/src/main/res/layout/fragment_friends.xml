<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <!-- 添加好友 -->

        <Button
            android:id="@+id/friends_fragment_addnewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/friends_addnew" />

        <!-- 搜索框 -->

        <EditText
            android:id="@+id/friends_fragment_searchEt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/friends_fragment_addnewBtn"
            android:layout_alignTop="@+id/friends_fragment_addnewBtn"
            android:layout_toLeftOf="@+id/friends_fragment_addnewBtn"
            android:gravity="center"
            android:hint="@string/friends_searchet_hint"
            android:singleLine="true" />
    </RelativeLayout>

    <!-- 好友列表 -->

    <ExpandableListView
        android:id="@+id/friend_fragment_frilistElv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >
    </ExpandableListView>

</LinearLayout>